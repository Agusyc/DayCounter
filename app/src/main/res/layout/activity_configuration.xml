<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lytMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agusyc.daycounter.ConfigurationActivity">

    <Spinner
        android:id="@+id/spnType"
        android:layout_width="0dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/edtDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/spnType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="numberDecimal"
        android:hint="@string/number_of_days"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/edtLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnType"
        android:inputType="textAutoCorrect"
        android:maxLength="30"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <GridLayout
        android:id="@+id/colorView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="4"
        app:layout_constraintBottom_toTopOf="@+id/okButton"
        app:layout_constraintTop_toBottomOf="@+id/edtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alignmentMode="alignBounds"
        android:padding="5dp">

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#F44336"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#E91E63"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#9C27B0"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#673AB7"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#3F51B5"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#2196F3"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#03A9F4"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#009688"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#4CAF50"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#8BC34A"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#CDDC39"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FFEB3B"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FFC107"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FF9800"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FF5722"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#795548"
            android:padding="2dp" />

    </GridLayout>

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorView"
        android:layout_marginBottom="57dp" />

</android.support.constraint.ConstraintLayout>
