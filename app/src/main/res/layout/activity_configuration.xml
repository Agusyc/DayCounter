<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lytMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agusyc.daycounter.ConfigurationActivity"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp" >

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spnType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_hint="@string/until_or_since"
        app:ms_enableFloatingLabel="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        android:paddingTop="30dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnDate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/event"/>

        <com.agusyc.daycounter.CustomTextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:helperText="@string/days_desc" >

            <EditText
                android:id="@+id/edtDays"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:hint="@string/number_of_days" />

        </com.agusyc.daycounter.CustomTextInputLayout>

    </LinearLayout>

    <com.agusyc.daycounter.CustomTextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:helperText="@string/event_desc" >

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edtLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textAutoCorrect"
        android:maxLength="30"
        android:hint="@string/event" />

    </com.agusyc.daycounter.CustomTextInputLayout>

    <GridLayout
        android:id="@+id/colorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="4" >

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#F44336"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#E91E63"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#9C27B0"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#673AB7"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#3F51B5"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#2196F3"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#03A9F4"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#009688"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#4CAF50"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#8BC34A"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#CDDC39"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FFEB3B"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FFC107"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FF9800"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FF5722"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#795548"
            android:padding="2dp" />

        <com.agusyc.daycounter.ColorImageView
            app:picked_color="#FFFFFF"
            android:padding="2dp" />

        <ImageView
            android:id="@+id/btnCustomColor"
            android:layout_height="60dp"
            android:layout_width="60dp" />
    </GridLayout>

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>
